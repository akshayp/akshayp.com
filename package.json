{
    "name": "akshayp.com",
    "version": "0.0.9",
    "description": "Code powering http://akshayp.com",
    "author": "Akshay Patel <akshayrpatel@gmail.com>",
    "private": true,
    "engines": {
        "node": "0.12.x"
    },
    "main": "index.js",
    "dependencies": {
        "compression": "^1.4.0",
        "express": "^4.11.2",
        "express-handlebars": "^1.1.0",
        "poet": "2.x",
        "moment": "^2.9.0",
        "request": "^2.53.0",
        "combohandler": "0.4.x",
        "newrelic": "^1.16.1"
    },
    "devDependencies": {
        "grunt": "^0.4.1",
        "grunt-cli": "^0.1.3",
        "grunt-eslint": "^7.0.0",
        "grunt-contrib-uglify": "^0.7.0",
        "grunt-contrib-concat": "^0.5.0",
        "grunt-bump": "^0.1.0",
        "mocha": "^2.1.0",
        "chai": "^1.10.0",
        "istanbul": "^0.3.5",
        "supertest": "^0.15.0",
        "coveralls": "^2.11.2",
        "traverse": "^0.6.6"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/akshayp/akshayp.com.git"
    },
    "subdomain": "akshayp",
    "domains": [
        "akshayp.com",
        "www.akshayp.com"
    ],
    "eslintConfig": {
        "rules": {
            "camelcase": 2,
            "curly": 2,
            "eqeqeq": 2,
            "indent": 2,
            "new-cap": 2,
            "no-caller": 2,
            "no-invalid-regexp": 2,
            "no-irregular-whitespace": 2,
            "no-mixed-spaces-and-tabs": 2,
            "no-trailing-spaces": 2,
            "no-undef": 2,
            "no-unused-vars": 2,
            "no-use-before-define": 2,
            "quotes": [2, "single"],
            "semi": 2,
            "space-before-blocks": 2,
            "space-before-function-parentheses": 2,
            "wrap-iife": 2
        },
        "env": {
            "browser": true,
            "node": true
        }
    },
    "scripts": {
        "start": "node index.js",
        "lint": "grunt eslint",
        "test": "istanbul cover --print summary _mocha -- -R spec && ((cat coverage/lcov.info | coveralls) || exit 0)"
    }
}
