{
    "name": "akshayp.com",
    "version": "0.0.15",
    "description": "Code powering http://akshayp.com",
    "author": "Akshay Patel <akshayrpatel@gmail.com>",
    "private": true,
    "engines": {
        "node": "6.x"
    },
    "main": "index.js",
    "dependencies": {
        "compression": "^1.4.0",
        "express": "^4.11.2",
        "express-handlebars": "^2.0.0",
        "poet": "2.x",
        "moment": "^2.9.0",
        "combohandler": "0.4.x",
        "newrelic": "^1.16.1"
    },
    "devDependencies": {
        "chai": "^3.0.0",
        "coveralls": "^2.11.2",
        "eslint": "^3.12.0",
        "grunt": "^1.0.0",
        "grunt-bump": "^0.8.0",
        "grunt-cli": "^1.2.0",
        "grunt-contrib-concat": "^1.0.1",
        "grunt-contrib-uglify": "^2.0.0",
        "istanbul": "^0.4.0",
        "mocha": "^3.2.0",
        "request": "^2.53.0",
        "supertest": "^2.0.0",
        "traverse": "^0.6.6"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/akshayp/akshayp.com.git"
    },
    "subdomain": "akshayp",
    "domains": [
        "akshayp.com",
        "www.akshayp.com"
    ],
    "eslintConfig": {
        "rules": {
            "block-scoped-var": 2,
            "brace-style": 2,
            "camelcase": [2, { "properties": "never" }],
            "comma-dangle": [2, "never"],
            "comma-style": 2,
            "complexity": 0,
            "consistent-this": [2, "self"],
            "curly": [2, "all"],
            "dot-notation": [2, { "allowKeywords": true }],
            "eqeqeq": 2,
            "global-strict": 0,
            "guard-for-in": 2,
            "indent": [2, 4, { "SwitchCase": 1 }],
            "jsx-quotes": 2,
            "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
            "keyword-spacing": 2,
            "max-depth": 0,
            "max-len": [2, 120, 4, { "ignoreComments": true, "ignoreUrls": true }],
            "max-params": 0,
            "max-statements": 0,
            "new-cap": [2, { "newIsCap": true, "capIsNew": false }],
            "no-bitwise": 2,
            "no-caller": 2,
            "no-console": 2,
            "no-cond-assign": 0,
            "no-debugger": 0,
            "no-empty": 0,
            "no-eval": 0,
            "no-iterator": 0,
            "no-loop-func": 0,
            "no-mixed-spaces-and-tabs": 2,
            "no-multi-str": 0,
            "no-new": 0,
            "no-plusplus": 0,
            "no-proto": 0,
            "no-script-url": 0,
            "no-shadow": 0,
            "no-trailing-spaces": 0,
            "no-undef": 2,
            "no-unused-vars": [2, { "vars": "all", "args": "none" }],
            "no-use-before-define": [2, "nofunc"],
            "padded-blocks": [2, "never"],
            "quotes": [2, "single"],
            "semi": [2, "always"],
            "space-before-blocks": 2,
            "space-before-function-paren": 2,
            "spaced-comment": [2, "always", { "markers": ["global"] }],
            "strict": 0,
            "valid-jsdoc": 2,
            "wrap-iife": [2, "inside"]
        },
        "env": {
            "browser": true,
            "node": true,
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures": {
                "templateStrings": true
            }
        }
    },
    "scripts": {
        "start": "node index.js",
        "lint": "eslint --fix .",
        "test": "istanbul cover --dir artifacts -- _mocha test --reporter spec",
        "release": "npm run lint && npm run test && grunt bump:patch"
    }
}
